<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_beige"
    tools:context=".SendCodeActivity">

    <Button
        android:id="@+id/buttonJoinUs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/dark_red"
        android:text="@string/text_login_button"
        android:onClick="buttonJoinUs"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextVerificate" />

    <Button
        android:id="@+id/buttonResendCode"
        android:layout_width="170dp"
        android:layout_height="52dp"
        android:layout_marginHorizontal="120dp"
        android:backgroundTint="@color/dark_red"
        android:text="Resend Code"
        android:layout_marginTop="88dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonJoinUs" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="221dp"
        android:layout_height="183dp"
        android:layout_marginTop="64dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextVerificate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/googleicon" />

    <EditText
        android:id="@+id/editTextVerificate"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="80dp"
        android:autofillHints=""
        android:background="@drawable/edit"
        android:drawableStart="@drawable/verification_lock"
        android:drawablePadding="4dp"
        android:hint="@string/text_enter_verification"
        android:inputType="number"
        android:paddingStart="8dp"
        android:textColor="#000000"
        android:textColorHint="#6C6363"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get New Code"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonResendCode"
        app:layout_constraintEnd_toEndOf="@+id/buttonResendCode"
        app:layout_constraintStart_toStartOf="@+id/buttonResendCode" />
</androidx.constraintlayout.widget.ConstraintLayout>